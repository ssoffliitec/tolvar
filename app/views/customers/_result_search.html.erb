<!-- partial que muestra el Nombre, la Fecha de Creación y la Fecha de 
Modificación de cada registro de la tabla Marcas -->
<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Nombre</th>
   <th>Documento</th>
   <th>Direccion</th>
   <th>Telefono</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="clientes">
   <% @customers.each do |customer| %>
    <tr>
     <td><%= customer.name %></td>
     <td><%= customer.dni %></td>
     <td><%= customer.address %></td>
     <td><%= customer.mobile %></td>
     <td>
      <%= button_to edit_customer_path(customer), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to customer, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>