<div class="container-fluid">
 <div class="row">
  <div class="panel-body">
   <%= form_for(customer) do |f| %>
    <% if customer.errors.any? %>
     <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
       <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
     </div>
    <% end %>

    <div class="form-group">
     <%= f.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.text_field :dni, autofocus: true, placeholder: "DNI", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.text_field :address, autofocus: true, placeholder: "Direccion", class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.text_field :phone, autofocus: true, placeholder: "Tel Fijo", class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.text_field :mobile, autofocus: true, placeholder: "Celular", class: "form-control" %>
    </div>
    <div class="form-group">
     <%= f.text_field :mail, autofocus: true, placeholder: "e-mail", class: "form-control" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "Aceptar", class: "btn btn-success" %>
    </div> 
   <% end %>
  </div>
 </div>
</div>