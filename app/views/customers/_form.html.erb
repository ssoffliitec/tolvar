<div class="container-fluid">
 <div class="row">
  <div class="panel-body">
   <%= form_for(customer, validate: true) do |f| %>
    <% if customer.errors.any? %>
        <div class="alert alert-danger text-center">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong><%= pluralize(customer.errors.count, "error: ") %></strong>
            <% customer.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name , autofocus: true, placeholder: "Nombre", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :dni, :class => 'control-label'%>
     <%= f.text_field :dni, autofocus: true, placeholder: "DNI/CUIT", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :address, :class => 'control-label' %>
      <%= f.text_field :address, autofocus: true, placeholder: "Direccion", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :phone, :class => 'control-label' %>
     <%= f.text_field :phone, autofocus: true, placeholder: "TelÃ©fono Fijo", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :mobile, :class => 'control-label' %>
     <%= f.text_field :mobile, autofocus: true, placeholder: "Celular", class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :mail, :class => 'control-label' %>
     <%= f.text_field :mail, autofocus: true, placeholder: "e-mail", class: "form-control" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "Aceptar", class: "btn btn-success" %>
    </div> 
   <% end %>
  </div>
 </div>
</div>