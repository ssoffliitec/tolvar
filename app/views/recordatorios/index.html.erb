<p id="notice"><%= notice %></p>

<h1>Recordatorios</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recordatorios.each do |recordatorio| %>
      <tr>
        <td><%= recordatorio.name %></td>
        <td><%= recordatorio.texto %></td>
        <td><%= link_to 'Show', recordatorio %></td>
        <td><%= link_to 'Edit', edit_recordatorio_path(recordatorio) %></td>
        <td><%= link_to 'Destroy', recordatorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

