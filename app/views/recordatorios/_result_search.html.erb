<!-- partial que muestra el Nombre, la Fecha de Creación y la Fecha de 
Modificación de cada registro de la tabla recordatorios -->
<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Asunto</th>
   <th>Fecha de Alta</th>
   <th>Fecha de Modificación</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="recordatorios">
   <% @recordatorios.each do |recordatorio| %>
    <tr>
     <td><%= recordatorio.name %></td>
     <td><%= recordatorio.created_at.strftime("%d/%m/%Y") %></td>
     <td><%= recordatorio.updated_at.strftime("%d/%m/%Y") %></td>
     <td>
      <%= button_to edit_recordatorio_path(recordatorio), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to recordatorio, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>