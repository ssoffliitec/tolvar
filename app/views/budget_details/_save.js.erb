
$("ul.errors").html("");
<% if @budget.budget_details.last.errors.any? %>
	<% @budget.budget_details.last.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html(" <%= message.html_safe %> "));
	<% end %>
<% else %>
	$("#budget-details").html("<%= escape_javascript(render(partial: 'budgets/table', locals: { budget: @budget, show_actions: true })) %>");
	$("#new-detail-modal").modal("hide");
<% end %>