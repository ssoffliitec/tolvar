<div class="modal-body">
  <%= form_for :budget_details, url: budget_budget_details_url, method: :post, remote: true do |f| %>
    <div class="row">
      <div class="col-xs-5">
        <div class="form-group">
            <%= f.label :item_id, value: "Artículo" %>
            <%= f.text_field :item, placeholder: "Artículo", class: "form-control", value: nil %>
            <%= f.hidden_field :item_id %>
            <%= hidden_field_tag :item_description  %>
        </div>
      </div>
      <div class="col-xs-2">
        <div class="form-group">
            <%= f.label :qty, value: 'Cantidad'%>
            <%= f.number_field :qty, placeholder: "Cant.", class: "form-control" %>
            <%= hidden_field_tag :budget_stock  %>
        </div>
      </div>
      <div class="col-xs-2">
        <div class="form-group">
            <%= f.label :price, value: "Precio" %>
            <%= f.text_field :price, placeholder: "Precio" , class: "form-control" %>
        </div>
      </div>
      <div class="col-xs-2">
        <div class="form-group">
            <%= f.label :subtotal, value: "Subtotal" %>
            <%= f.text_field :subtotal, placeholder: "0", class: "form-control", disabled: true %>
        </div>
      </div>
    </div>
    
      <%= f.submit "Aceptar", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="modal-footer">
  <%= link_to "Cancelar", "#", class: "btn btn-danger", "data-dismiss": "modal" %>
</div>