<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(item, validate: true) do |f| %>
        <% if item.errors.any? %>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            <strong><%= pluralize(item.errors.count, "error: ") %></strong>
            <% item.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        <% end %>
        
          <div class="col-lg-12 form-group">
            <%= f.label :description %>
            <%= f.text_field :description, id: :item_description, class: "form-control", placeholder: "Nombre de Artículo" %>
          </div>
          <div class="col-lg-6 form-group">
              <%= f.label :code %>
            <%= f.text_field :code, id: :item_code, class: "form-control", placeholder: "Código" %>
          </div>
          <div class="col-lg-6 form-group">
              <%= f.label :marca %>
            <%= f.text_field :marca, id: "item_marca", class: "form-control" , placeholder: "Marca" %>
            <div style="display: none">
              <%= f.text_field :marca_id, id: "item_marca_id" %>
            </div>
            <div style="display: none">
              <%= f.text_field :marca_name, id: "item_marca_name" %>
            </div>
          </div>
          <div class="col-lg-6 form-group">
              <%= f.label :unit_id %>
            <%= f.collection_select :unit_id, @units, :id, :name, 
              {selected: @item.unit_id, include_blank: 'Seleccione Unidad de medida'},
              {class: "form-control"} %>
          </div>
          <div class="col-lg-6 form-group">
              <%= f.label :category_id %>
            <%= f.collection_select :category_id, @categories, :id, :name, 
              {selected: @item.category_id, include_blank: 'Seleccione Categoria'},
              {class: "form-control"} %>
          </div>
          <div class="form-group col-lg-3">
              <%= f.label :stock %>
            <%= f.number_field :stock, id: :item_stock, class: "form-control", placeholder: "Stock Total" %>
          </div>
          <div class="form-group col-lg-3">
              <%= f.label :sale_stock %>
            <%= f.number_field :sale_stock, id: :item_sale_stock, class: "form-control", placeholder: "Stock Venta" %>
          </div>

          <div class="form-group col-lg-3">
              <%= f.label :min_stock %>
            <%= f.number_field :min_stock, id: :item_min_stock, class: "form-control", placeholder: "Stock Mínimo" %>
          </div>
          

          <div class="form-group col-lg-3">
              <%= f.label :price %>
            <%= f.text_field :price, id: :item_price, class: "form-control", placeholder: "Precio" %>
          </div>
          <div class="form-group col-lg-12">
              <%= f.label :picture %>
              <%= f.file_field :picture, id: "item_picture" %>
          </div>

        <br>

        <div class="actions col-md-5 col-md-offset-5 col-sm-5 col-sm-offset-5">
          <%= f.submit "Guardar Atículo", class: "btn btn-success"%>
        </div>  
      <% end %>
    </div>
  </div>
</div>